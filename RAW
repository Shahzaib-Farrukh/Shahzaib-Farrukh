<?php
// Specify the directory
$directory = 'path/to/your/directory';

// Check if the directory exists
if (is_dir($directory)) {
    // Scan the directory and get an array of files and directories
    $files = scandir($directory);

    // Display the contents of the directory
    echo "Contents of the directory '$directory':<br>";
    foreach ($files as $file) {
        if ($file != '.' && $file != '..') {
            echo $file . "<br>";
        }
    }
} else {
    echo "The specified directory does not exist.";
}

// Specify the file path
$file_path = 'path/to/your/file.txt';

// Check if the file exists
if (file_exists($file_path)) {
    // Get the contents of the file
    $file_contents = file_get_contents($file_path);

    // Display the contents of the file
    echo "<br>Contents of the file '$file_path':<br>";
    echo nl2br($file_contents);
} else {
    echo "<br>The specified file does notÂ exist.";
}
?>
