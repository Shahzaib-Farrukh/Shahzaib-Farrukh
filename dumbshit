stages {
        stage('Build Docker Image and Scan with Snyk') {
            steps {
                script {
                    // Get the directory where the Jenkinsfile resides
                    def workspaceDir = pwd()

                    // Build Docker image
                    sh "docker build -t my-image ${workspaceDir}"

                    // Scan Docker image with Snyk
                    echo 'Scanning Docker image with Snyk...'
                    sh 'snyk container test my-image'
                }
            }
        }
    }

    post {
        always {
            // Clean up or additional post-build actions
        }
    }
